<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hyundai.dutyfree.mapper.MemberMapper">
	<!-- 시큐리티를 위해 -->
	<select id="read"
		resultType="com.hyundai.dutyfree.vo.MemberVO">
		select *
		from member
		where mid= #{mid}
	</select>
	
	<select id="selectMember"
		resultType="com.hyundai.dutyfree.vo.MemberVO">
		select mid from member
	</select>
	<insert id="memberJoin">
		insert into member values(#{mid}, #{mpassword},
		#{memail}, #{mphone},#{mname},
		5000,
		sysdate,'Friend',#{mgender})
	</insert>
	<!-- 아이디 중복검사 -->
	<select id="idCheck" resultType="int">

		select count(*) from member
		where mid = #{mid}

	</select>
	<select id="memberLogin"
		resultType="com.hyundai.dutyfree.vo.MemberVO">
		select * from member where mid=#{mid}
	</select>

	<select id="myPage"
		resultType="com.hyundai.dutyfree.vo.MemberVO">
		select * from member where mid=#{mid}
	</select>

	<select id="findID"
		resultType="com.hyundai.dutyfree.vo.MemberVO">
		select * from member where mname=#{mname} and
		memail=#{memail}
	</select>

	<!-- 회원 정보 수정 -->
	<update id="updateMember">
		update member set
		mname=#{mname},memail=#{memail},mtel=#{mtel}, mpassword=#{mpassword}
		where mid = #{mid}
	</update>

	<!-- 회원 정보 삭제 -->
	<delete id="deleteMember">
		delete from member where mid = #{mid}
	</delete>
</mapper>